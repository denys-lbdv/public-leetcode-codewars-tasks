{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run current TS with tsx",
      "runtimeExecutable": "tsx",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "clear-terminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Watch current TS with tsx",
      "runtimeExecutable": "tsx",
      "args": ["watch", "${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "clear-terminal"
    }
  ]
}